<img src="assets/img/neighboard-450px.png" alt="Neighborhood Party Hood">

<h2>Create a party</h2>

<form class="create-form">

    <div class="form-group">
        <label for="first-name">First Name:</label>
        <input type="text" id="first-name" name="first-name">
    </div>
    </div>
    <div class="form-group">
        <label for="last-name">Last Name:</label>
        <input type="text" id="last-name" name="last-name">
    </div>
    <button id="name-button" type="submit">Add Name!</button>
    <h4 class="test1"></h4>
    <br/>
    <div class="form-group">
        <label for="party-name">What is the party name?</label>
        <input type="text" id="party-name" name="party-name">
    </div>
    <button id="party-button" type="submit">Add Party Name!</button>
    <h4 class="test2"></h4>
    <br/>
    <div class="form-group">
        <label for="party-address">What is the address?</label>
        <input type="text" id="party-address" name="party-address">
    </div>
    <button id="location-button" type="submit">Add Address!</button>
    <h4 class="test3"></h4>
    <br/>
    <div class="form-group">
        <label for="date">Date:</label>
        <input type="date" id="date" name="date">
    </div>
    <br/>
    <div class="form-group">
        <label for="start-time">Starting time:</label>
        <input type="time" id="start-time" name="start-time">
    </div>

    <div class="form-group">
        <label for="end-time">Ending time:</label>
        <input type="time" id="end-time" name="end-time">
    </div>
    <br/>
    <button id="submit-button" type="submit">Add a party!</button>

</form>
<br/>

<h2>Party board</h2>

<ul class="event-list">
    {{#each Events}}
            <li>
                <h4>{{this.id}}. {{Parties.partyName}}</h4>
                <p>{{Users.fname}}</p>
                <p>{{Locations.address}}</p>
                <p>Date: {{this.date}}</p>
                <p>Start time: {{this.startTime}}</p>
                <p>End time: {{this.endTime}}</p>
            </li>
    {{/each}}
</ul>